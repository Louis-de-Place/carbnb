<%= simple_form_for [@offer, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating,
              as: :radio_buttons,
              collection: Review::AUTHORIZED_RATINGS,
              label_method: lambda { |rate| render "offers/rate" },
              item_wrapper_class: "d-inline-block"
  %>
  <%= f.button :submit, class:'button' %>
<% end %>
