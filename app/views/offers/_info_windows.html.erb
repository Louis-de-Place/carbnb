<%= link_to offer_path(offer), class: "text-decoration-none text-dark" do %>
  <div>
    <div class="image-container">
      <img src="https://images.unsplash.com/photo-1587750059638-e7e8c43b99fc?q=80&w=3538&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" height="100" alt="" class="object-fit-cover">
    </div>
    <div class="card-body">
      <p class="card-title justify-content"><%= offer.brand %> - <%= offer.model %></p>
      <div class="card-info d-flex justify-content-between">
        <p class="card-price">$<%= offer.price %>/day</p>
        <% if offer.reviews.count > 0 %>
          <div>
            <i class="fa-solid fa-star"></i> <%= offer.reviews.average(:rating) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
